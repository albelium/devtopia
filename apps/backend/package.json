{
  "name": "backend",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm prisma:generate && pnpm generate && pnpm tsc",
    "dev": "pnpm generate:watch & pnpm tsx watch --env-file=.env ./src/index.ts",
    "server:test": "node --enable-source-maps dist/index.js",
    "server:prd": "node --enable-source-maps dist/index.js",
    "generate": "graphql-codegen --config ./src/graphql/codegen.ts --require dotenv/config",
    "generate:watch": "graphql-codegen --watch --config ./src/graphql/codegen.ts --require dotenv/config",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:reset": "prisma migrate reset -f",
    "prisma:seed": "prisma db seed",
    "prisma:studio": "prisma studio",
    "lint": "eslint './src/**/{*.js,*.cjs,*.ts}' --max-warnings 0",
    "lint:fix": "eslint './src/**/{*.js,*.cjs,*.ts}' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "pnpm clean:tsbuildinfo; pnpm clean:dist",
    "clean:dist": "rimraf dist",
    "clean:tsbuildinfo": "rimraf tsconfig.tsbuildinfo"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@apollo/server": "4.11.2",
    "@as-integrations/fastify": "2.1.1",
    "@fastify/compress": "7.0.3",
    "@fastify/cors": "9.0.1",
    "@fastify/helmet": "11.1.1",
    "@fastify/rate-limit": "10.2.2",
    "@pothos/core": "3.41.2",
    "@pothos/plugin-scope-auth": "3.22.1",
    "@pothos/plugin-simple-objects": "3.7.1",
    "@prisma/client": "5.22.0",
    "auth0": "4.14.0",
    "dotenv": "16.4.5",
    "fastify": "4.28.1",
    "graphql": "16.9.0",
    "graphql-scalars": "1.24.0",
    "jsonwebtoken": "9.0.2",
    "jwks-rsa": "3.1.0",
    "neverthrow": "6.2.2",
    "uuid": "9.0.1",
    "prisma": "5.22.0"
  },
  "devDependencies": {
    "@faker-js/faker": "8.4.1",
    "@graphql-codegen/cli": "5.0.3",
    "@graphql-codegen/client-preset": "4.5.1",
    "@graphql-codegen/schema-ast": "4.1.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@mermaid-js/mermaid-cli": "10.9.1",
    "@parcel/watcher": "2.5.0",
    "@prisma/generator-helper": "5.22.0",
    "@swc/core": "1.9.3",
    "@swc/jest": "0.2.37",
    "@types/jest": "29.5.14",
    "@types/jsonwebtoken": "9.0.7",
    "@types/node": "20.14.12",
    "jest": "29.7.0",
    "prisma-erd-generator": "1.11.2",
    "tsx": "4.19.2",
    "typescript": "5.7.2"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
